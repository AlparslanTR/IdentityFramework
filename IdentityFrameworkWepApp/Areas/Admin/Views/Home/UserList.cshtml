@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Shared/_Layout.cshtml";
}
@model List<UserArea>


<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ad</th>
      <th scope="col">Mail</th>
      <th scope="col">Rol</th>
      <th scope="col">Yetki Atama</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
        {
     <tr>
      <th scope="row">@item.Id</th>
      <td>@item.UserName</td>
      <td>@item.Email</td>
      <td>@item.Role</td>
      <td><a class="btn btn-info" asp-area="Admin" asp-controller="Role" asp-action="AssignRoleToUser" asp-route-userId="@item.Id">Yetkilendir</a></td>
     </tr>
        }
  </tbody>
</table>
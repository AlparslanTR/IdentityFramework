@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Shared/_Layout.cshtml";
}
@model List<UserArea>
<h1>UserList</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ad</th>
      <th scope="col">Mail</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
        {
     <tr>
      <th scope="row">@item.Id</th>
      <td>@item.UserName</td>
      <td>@item.Email</td>
    </tr>
        }
  </tbody>
</table>

@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserEditDto

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="alert alert-primary d-flex align-items-center" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </svg>
    <div>
        * İle Başlayan Alanlar Zorunlu Alanlardır.!
    </div>
</div>

<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
</div>
<form class="row g-3" asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
    <div class="col-md-12">
        <label for="UserName" class="form-label" asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control">
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="col-md-12">
        <label for="Mail" class="form-label" asp-for="Mail"></label>
        <input asp-for="Mail" class="form-control">
        <span class="text-danger" asp-validation-for="Mail"></span>
    </div>
    <div class="col-md-12">
        <label for="Phone" class="form-label" asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control">
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class="col-md-12">
        <label for="Age" class="form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control">
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>
    <div class="col-md-12">
        <label for="BirthDate" class="form-label" asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control">
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="col-md-12">
        <label for="City" class="form-label" asp-for="City"></label>
        <select class="form-control" asp-for="City" asp-items="ViewBag.cityList">
            <option value="">Şehir Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="City"></span>
    </div>
    <div class="col-md-12">
        <label for="Gender" class="form-label" asp-for="Gender"></label>
        <select class="form-control" asp-for="Gender" asp-items="ViewBag.gender">
            <option value="">Cinsiyet Seçiniz</option>
        </select>
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>
    <div class="col-md-12">
        <label for="Picture" class="form-label" asp-for="Picture"></label>
        <input type="file" asp-for="Picture" class="form-control">
        <span class="text-danger" asp-validation-for="Picture"></span>
    </div>
    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>



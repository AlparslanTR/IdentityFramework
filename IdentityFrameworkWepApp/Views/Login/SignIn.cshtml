@{
    Layout = null;
}
@model SignInDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yapın</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IdentityFrameworkWepApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    @section Scripts
        {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

    <div class="container">

        <div style="text-align: center;">
            <img src="https://alparslanakbas.xyz/BlogTema/img/Alp.png" alt="Logo" class="">
        </div>

        <form asp-controller="Login" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">

            <div class="title">Giriş</div>

            <div class="input-box">
                <input type="email" placeholder="Email Giriniz..." asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
                <div class="underline"></div>
            </div>

            <div class="input-box">
                <input type="password" placeholder="Şifrenizi Giriniz..." asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
                <div class="underline"></div>
            </div>

            <br />

            <div class="form-group d-flex flex-md-row flex-column justify-content-between align-items-center">
                <div class="text-left">
                    <div class="checkbox checkbox-sm">
                        <input type="checkbox" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
                    </div>
                </div>
                <div class="text-right"><a asp-controller="Login" asp-action="ForgetPassword" class="card-link"><small>Şifremi unuttum</small></a></div>
            </div>


            <div class="input-box button">
                <input type="submit" value="Giriş Yap">
            </div>
            <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"> </div>

        </form>

        <div class="text">veya Sosyal Medyayla Bağlanın</div>

        <!--Sosyal Medya Butonları-->

        <div class="github">
            <a href="#"><i class="fab fa-github"></i>Github ile Giriş</a>
        </div>

        <div class="twitter">
            <a href="#"><i class="fab fa-twitter"></i>Twitter ile Giriş</a>
        </div>

        <div class="facebook">
            <a href="#"><i class="fab fa-facebook"></i>Facebook ile Giriş</a>
        </div>


    </div>

</body>
</html>
